@using bacit_dotnet.MVC.Models.Users
@model UserViewModel
<h3>Rediger registrerte brukere</h3>

    <form asp-action="save" asp-controller="users" method="post">
        <ul>

            
            <li>
                <label for="Name">Navn</label>
                <input type="text" name="Name" value="@Model.Name" />
            </li>

            <!--2 Neste linjer er sjekkboks for rolle i usersiden-->
        <li>
            <label for="Role">Sett som Administrator</label>
                <input asp-for="@Model.IsAdmin"/>
        </li>

        <li>
            <label for="Role">Sett som Mekaniker</label>
            <input asp-for="@Model.IsAdmin" />
        </li>

        <!--Sjekkboks er de 2 linjene over:)-->

            <li>
                <input type="submit" value="Lagre" />
            </li>
        </ul>
    </form>

<table>
    <tr>
        <td>Name</td>
        <td>Email</td>
    </tr>
    @foreach (var user in Model.Users)
    {
        <tr>
            <td>@user.Name</td>
            <td>@user.Email</td>
            <td>
                <form asp-action="delete" asp-controller="users" method="post">
                    <input type="hidden" name="Email" value="@user.Email" />
                    <input type="submit" value="Slett" />
                </form>
            </td>
            <td>
                <form asp-action="index" asp-controller="users" method="get">
                    <input type="hidden" name="Email" value="@user.Email" />
                    <input type="submit" value="Endre" />
                </form>
            </td>
        </tr>
    }
</table>
